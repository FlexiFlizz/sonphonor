# =================================
# SONPHONOR - Configuration Portainer
# =================================
# Copiez ce fichier vers .env et configurez selon vos besoins

# =================================
# ENVIRONNEMENT
# =================================
NODE_ENV=production

# =================================
# BASE DE DONNÉES POSTGRESQL
# =================================
POSTGRES_DB=sonphonor
POSTGRES_USER=sonphonor_user
POSTGRES_PASSWORD=VotreMotDePasseSecurisé123!

# =================================
# REDIS CACHE
# =================================
# Laissez vide pour pas de mot de passe (pour simplicité)
REDIS_PASSWORD=

# =================================
# SÉCURITÉ JWT
# =================================
JWT_SECRET=VotreSecretJWTTresLong123!ChangezMoi
JWT_EXPIRES_IN=7d

# =================================
# DOMAINES ET URLs
# =================================
# Domaine principal de l'application
FRONTEND_DOMAIN=sonphonor.votre-domaine.com
API_DOMAIN=api.sonphonor.votre-domaine.com

# URL de l'API pour le frontend (utiliser /api pour proxy via nginx)
REACT_APP_API_URL=/api

# CORS - Origine autorisée (* pour tout autoriser, à restreindre en production)
CORS_ORIGIN=*

# =================================
# PORTS (modification optionnelle)
# =================================
HTTP_PORT=80
HTTPS_PORT=443
ADMINER_PORT=8080

# =================================
# IMAGES DOCKER (optionnel)
# =================================
# Utilisez ces variables si vous avez un registry privé
# BACKEND_IMAGE=registry.votre-domaine.com/sonphonor-backend:latest
# FRONTEND_IMAGE=registry.votre-domaine.com/sonphonor-frontend:latest

# =================================
# CONFIGURATION APPLICATION
# =================================
# Taille maximale des fichiers uploadés (en octets) - 10MB par défaut
MAX_FILE_SIZE=10485760

# =================================
# CONFIGURATION EMAIL (optionnel)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@sonphonor.com

# =================================
# CONFIGURATION SSL (optionnel)
# =================================
DOMAIN_NAME=sonphonor.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# =================================
# DÉPLOIEMENT PORTAINER
# =================================
# Stack name dans Portainer (ne pas modifier)
COMPOSE_PROJECT_NAME=sonphonor
